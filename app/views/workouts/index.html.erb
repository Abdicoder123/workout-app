<div class="container mt-5">
  <h1 class="text-center mb-4">Workouts</h1>
  
  <div class="d-flex justify-content-end mb-4">
    <%= link_to 'Back to Homepage', root_path, class: 'btn btn-secondary' %>
  </div>

  <% if @workouts.present? %>
    <ul class="list-group">
      <% @workouts.each do |workout| %>
        <li class="list-group-item">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h5 class="mb-1">
                <%= link_to workout.name, workout_path(workout), class: 'text-decoration-none text-primary' %>
              </h5>
              <small class="text-muted">Category: <%= workout.category %></small>
              <p class="mb-0 mt-2"><em><%= workout.description %></em></p>
            </div>
            <%= link_to 'View Details', workout_path(workout), class: 'btn btn-primary btn-sm' %>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-center text-muted">No workouts available.</p>
  <% end %>

  <div class="text-center mt-4">
    <%= link_to 'New Workout', new_workout_path, class: 'btn btn-success btn-lg' %>
  </div>
  <div class="text-center mt-4">
    <%= link_to 'Exercise Search', search_exercises_path, class: 'btn btn-success btn-lg' %>
  </div>
</div>