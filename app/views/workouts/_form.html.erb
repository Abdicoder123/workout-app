<%= form_with model: @workout, local: true do |form| %>
    <div>
      <%= form.label :name, "Workout Name" %>
      <%= form.text_field :name, required: true %>
    </div>
  
    <div>
      <%= form.label :description, "Description" %>
      <%= form.text_area :description, required: true %>
    </div>
  
    <div>
      <%= form.label :muscle_group, "Muscle Group" %>
      <%= form.text_field :muscle_group, required: true %>
    </div>
  
    <div>
      <%= form.label :equipment, "Equipment" %>
      <%= form.text_field :equipment, required: true %>
    </div>
  
    <div>
      <%= form.label :category, "Category" %>
      <%= form.text_field :category, required: true %>
    </div>
  
    <div>
      <%= form.submit "Create Workout" %>
    </div>
  <% end %>