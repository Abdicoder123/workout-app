<h1>BMI</h1>
<h1>BMI Record</h1>

<p><strong>BMI Number:</strong> <%= @bmi.number %></p>
<p><strong>Category:</strong> <%= @bmi.category %></p>
<p><strong>Height:</strong> <%= @bmi.height %> meters</p>
<p><strong>Weight:</strong> <%= @bmi.weight %> kilograms</p>
<p><strong>Created At:</strong> <%= @bmi.created_at.strftime("%B %d, %Y") %></p>

<div class="actions">
  <%= link_to 'Edit BMI', edit_bmi_path(@bmi), class: 'btn btn-warning' %>
  <%= link_to 'Delete BMI', @bmi, data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this BMI record?' }, class: 'btn btn-danger' %>
  <%= link_to 'Back to BMI Records', bmis_path, class: 'btn btn-primary' %>
</div>


