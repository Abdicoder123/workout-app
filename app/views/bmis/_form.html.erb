<% content_for :javascript do %>
    <script type="module">
      import "bmi";
    </script>
  <% end %>

<%= form_with model: @bmi, local: true do |form| %>
  <div>
    <%= form.label :height_ft, "Height (feet)" %>
    <%= form.number_field :height_ft, required: true, id: "height-ft", step: 1, min: 0 %>
  </div>

  <div>
    <%= form.label :height_in, "Height (inches)" %>
    <%= form.number_field :height_in, required: true, id: "height-in", step: 0.01, min: 0 %>
  </div>

  <div>
    <%= form.label :weight, "Weight (in pounds)" %>
    <%= form.number_field :weight, required: true, id: "weight-lbs", step: 0.1, min: 0 %>
  </div>

  <%= form.hidden_field :number, id: "bmi-number" %>
  <%= form.hidden_field :category, id: "category" %>

  <div>
    <%= form.submit "Create BMI" %>
  </div>
<% end %>

  